<Page x:Class="WpfApp2.Staff"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Staff">
    <Grid>
        <DataGrid x:Name="DGStaff" IsReadOnly="True"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="ФИО" Width="*" Binding="{Binding ФИО}"/>
                <DataGridTextColumn  Header="Дата рождения" Width="*" Binding="{Binding Дату_рождения}"/>
                <DataGridTextColumn  Header="Поспортные данные" Width="*"  Binding="{Binding Паспортные_данные}"/>
                <DataGridTextColumn  Header="Банковские реквизиты" Width="*" Binding="{Binding Банковские_реквезиты}"/>
                <DataGridTextColumn  Header="Смена" Width="*" Binding="{Binding Смены.Название}"/>
                <DataGridTextColumn  Header="Семейное положение" Width="*" Binding="{Binding Семейное_положение}"/>
                <DataGridTextColumn  Header="Здоровье" Width="*"  Binding="{Binding Здоровье}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
